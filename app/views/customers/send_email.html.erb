<%= form_for :email,url:{action:'send_mail'} do |f|%>
     
      <div class="box-body">
        
       <div class="form-group">
        <%= text_field_tag :subject,"",placeholder: "Subject:",class: "form-control"%>
      </div>

      <div class="form-group">
       <%= cktext_area_tag :message,"",placeholder: "Message:",class: "form-control",style: "height:300px" %>
      </div>
       
    
     <div class="form-group"><%= f.submit 'Send',class: "btn btn-primary",style: "width:80px",data: { disable_with: "Sending..." }%></div>
   </div><!-- /.box-body -->
   <%end%>